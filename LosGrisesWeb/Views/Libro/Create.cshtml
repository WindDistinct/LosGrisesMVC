@model LosGrisesWeb.ProxyLibro.LibroDC

@{
    ViewBag.Title = "Create";
    var alias = ViewBag.LibroAlias as Dictionary<string, string>;
}

<h2>Registrar Libro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Libro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @alias["lib_nom"]
            <div class="col-md-10">
                @Html.EditorFor(model => model.lib_nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lib_nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["aut_id"]
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.aut_id, (SelectList)ViewBag.Autores,
                "Seleccione un Autor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.aut_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["gen_id"]
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.gen_id, (SelectList)ViewBag.Generos,
                "Seleccione un GÃ©nero", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gen_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["lib_edi"]
            <div class="col-md-10">
                @Html.EditorFor(model => model.lib_edi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lib_edi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["lib_fec_pub"]
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.lib_fec_pub, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(model => model.lib_fec_pub, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["lib_disp_stock"]
            <div class="col-md-10">
                @Html.EditorFor(model => model.lib_disp_stock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lib_disp_stock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @alias["edi_id"]
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.edi_id, (SelectList)ViewBag.Editoriales,
                "Seleccione una Editorial", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.edi_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
