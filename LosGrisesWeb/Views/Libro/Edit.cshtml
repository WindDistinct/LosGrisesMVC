@model LosGrisesWeb.ProxyLibro.LibroDC

@{
    ViewBag.Title = "Edit";
    var alias = ViewBag.LibroAlias as Dictionary<string, string>;
}

<h2>Editar Libro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @alias["lib_id"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.lib_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lib_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["lib_nom"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.lib_nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lib_nom, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["aut_id"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.aut_id, (SelectList)ViewBag.aut_id,
"Seleccione un Autor", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.aut_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["gen_id"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.gen_id, (SelectList)ViewBag.gen_id,
"Seleccione un Genero", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.gen_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["lib_edi"]
        @Html.LabelFor(model => model.lib_edi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.lib_edi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lib_edi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["lib_fec_pub"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.lib_fec_pub, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lib_fec_pub, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @alias["lib_disp_stock"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.lib_disp_stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lib_disp_stock, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["edi_id"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.edi_id, (SelectList)ViewBag.edi_id,
"Seleccione una Editorial", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.edi_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @alias["lib_state"]
        <div class="col-md-10">
            @Html.DropDownList("EstadoLibro", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.lib_state, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
