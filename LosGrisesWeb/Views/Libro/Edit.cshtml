@model LosGrisesWeb.ProxyLibro.LibroDC

@{
    ViewBag.Title = "Editar Libro";
}

<h2>Editar Libro</h2>

@using (Html.BeginForm("Edit", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.lib_nom)
        @Html.TextBoxFor(model => model.lib_nom, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.aut_id)
        @Html.TextBoxFor(model => model.aut_id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.gen_id)
        @Html.TextBoxFor(model => model.gen_id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.lib_edi)
        @Html.TextBoxFor(model => model.lib_edi, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.lib_fec_pub)
        @Html.TextBoxFor(model => model.lib_fec_pub, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.lib_disp_stock)
        @Html.TextBoxFor(model => model.lib_disp_stock, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.edi_id)
        @Html.TextBoxFor(model => model.edi_id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.lib_state)
        @Html.TextBoxFor(model => model.lib_state, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Libro")" class="btn btn-secondary">Cancelar</a>
    </div>
}
