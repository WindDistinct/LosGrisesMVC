@{
    ViewBag.Title = "LibrosAlquilados";
}

<a href='@Url.Action("Index", "Consulta")' class="btn btn-outline-warning mt-1" style="width:100px; height:40px;">
    Regresar
</a>

<br />

<h2 class="mb-4">¿Cuáles son los libros más rentados?</h2>

<br />

@using (Html.BeginForm("FiltrarLibrosAlquilados", "Consulta"))
{
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="FechaInicio" class="form-label">Fecha Inicio:</label>
            <input type="date" id="FechaInicio" name="FechaInicio" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label for="FechaFin" class="form-label">Fecha Fin:</label>
            <input type="date" id="FechaFin" name="FechaFin" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label for="Libro" class="form-label">Buscar por Título:</label>
            <input type="text" id="Libro" name="Libro" class="form-control" placeholder="Título del libro" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>

}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Libro</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in ViewBag.ObtenerLibrosMasAlquilados)
        {
            <tr>
                <td>@libro.Titulo</td>
                <td>@libro.VecesAlquilado</td>
            </tr>
        }
    </tbody>
</table>
