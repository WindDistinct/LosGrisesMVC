@model IEnumerable<LosGrisesWeb.ProxyPersonal.PersonalDC>

@{
    ViewBag.Title = "Listado de Personal";
    var alias = ViewBag.PersonalAlias as Dictionary<string, string>;
}

<h2 class=" mt-5 mb-3">Mantenimiento del Personal</h2>

<p>
    <a href='@Url.Action("Create", new { controller = "Personal", action = "Create" })' class="btn btn-outline-success">
        <img src="~/Images/Agregar.png" title="Agregar" />  Registrar
    </a>
</p>

<table class="table table-striped table-hover" style="text-align:center">
    <thead>
        <tr>
            <th>@alias["per_nom"]</th>
            <th>@alias["per_ape_pat"]</th>
            <th>@alias["per_dni"]</th>
            <th>@alias["per_tel"]</th>
            <th>@alias["per_mail"]</th>
            <th>@alias["per_state"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.per_nom)</td>
                <td>@Html.DisplayFor(modelItem => item.per_ape_pat)</td>
                <td>@Html.DisplayFor(modelItem => item.per_dni)</td>
                <td>@Html.DisplayFor(modelItem => item.per_tel)</td>
                <td>@Html.DisplayFor(modelItem => item.per_mail)</td>
                <td>
                    @if(@Html.DisplayFor(modelItem => item.per_state).ToString() == "1") 
                    {
                        <span>Activo</span>
                    }
                    else
                {
                    <span>Inactivo</span>
                }
                </td>
                <td>
                    <a href='@Url.Action("Edit", new { id = item.per_id })' class="btn btn-outline-primary " style="width:100px; height:40px;">
                        <img src="~/Images/Editar.png" title="Editar" />  Editar
                    </a>
                    <br />
                    <a href='@Url.Action("Details", new { id = item.per_id })' class="btn btn-outline-secondary mt-1" style="width:100px; height:40px;">
                        <img src="~/Images/Buscar.png" title="Consultar" />  Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>