@model LosGrisesWeb.ProxyPersonal.PersonalDC

@{
    ViewBag.Title = "Editar Personal";
    var alias = ViewBag.PersonalAlias as Dictionary<string, string>;
}

<h2>Editar Personal</h2>

@using (Html.BeginForm("Edit", "Personal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h4></h4>
    <hr />

    <div class="form-group">
        @*@Html.LabelFor(model => model.cli_id, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @alias["per_id"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.per_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.per_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @alias["per_nom"]
        @Html.TextBoxFor(model => model.per_nom, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_ape_pat"]
        @Html.TextBoxFor(model => model.per_ape_pat, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_ape_mat"]
        @Html.TextBoxFor(model => model.per_ape_mat, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_dni"]
        @Html.TextBoxFor(model => model.per_dni, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_tel"]
        @Html.TextBoxFor(model => model.per_tel, new { @class = "form-control", type = "tel", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_mail"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.per_mail, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>

    <div class="form-group">
        @alias["per_pass"]
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.per_pass, new { @class = "form-control", type = "password", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @alias["ubg_id"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ubg_id, (SelectList)ViewBag.ubgId,
                           "Seleccione un Ubigeo", new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @alias["per_dir"]
        @Html.TextBoxFor(model => model.per_dir, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @alias["per_state"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.per_state, new SelectList(ViewBag.EstadoPersonal, "Value", "Text"), htmlAttributes: new { @class = "form-control", required = "required" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-outline-primary mt-2" style="width:100px; height:40px;" />
        <a href='@Url.Action("Index", "Personal")' class="btn btn-outline-warning mt-1" style="width:100px; height:40px;">
            Regresar
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}