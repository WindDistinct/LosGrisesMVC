@model LosGrisesWeb.ProxyPersonal.PersonalDC

@{
    ViewBag.Title = "Crear Personal";
    var alias = ViewBag.PersonalAlias as Dictionary<string, string>;
}

<h2 class="mt-5 mb-4">Registrar Personal</h2>

@using (Html.BeginForm("Create", "Personal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @*<div class="form-group">
            @Html.LabelFor(model => model.per_id, "Id")
            @Html.TextBoxFor(model => model.per_id, new { @class = "form-control" })
        </div>*@

    <h4></h4>
    <hr />

    <div class="form-group">
        @alias["per_nom"]
        @Html.TextBoxFor(model => model.per_nom, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.per_nom, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_ape_pat"]
        @Html.TextBoxFor(model => model.per_ape_pat, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.per_ape_pat, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_ape_mat"]
        @Html.TextBoxFor(model => model.per_ape_mat, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.per_ape_mat, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_dni"]
        @Html.TextBoxFor(model => model.per_dni, new { @class = "form-control", maxlength = "8", minlength = "8", required = "required" })
        @Html.ValidationMessageFor(model => model.per_dni, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_tel"]
        @Html.TextBoxFor(model => model.per_tel, new { @class = "form-control", type = "tel", required = "required" })
        @Html.ValidationMessageFor(model => model.per_tel, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_mail"]
        <div class="col-md-10">
            @Html.EditorFor(model => model.per_mail, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.per_mail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @alias["per_pass"]
        <div class="col-md-10">
            @Html.PasswordFor(model => model.per_pass, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.per_pass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @alias["ubg_id"]
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ubg_id, (SelectList)ViewBag.ubgId,
                           "Seleccione un Ubigeo", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.ubg_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @alias["per_dir"]
        @Html.TextBoxFor(model => model.per_dir, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.per_dir, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @alias["per_fec_ing"]
        @Html.TextBoxFor(model => model.per_fec_ing, new { @class = "form-control", type = "date", required = "required" })
        @Html.ValidationMessageFor(model => model.per_fec_ing, "", new { @class = "text-danger" })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.per_user_mod)
            @Html.TextBoxFor(model => model.per_user_mod, new { @class = "form-control" })
        </div>*@

    <div class="form-group mt-4">
        <input type="submit" value="Registrar" class="btn btn-outline-primary mt-2" style="width:100px; height:40px;" />
        <a href='@Url.Action("Index", "Personal")' class="btn btn-outline-warning mt-1" style="width:100px; height:40px;">
            Regresar
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}